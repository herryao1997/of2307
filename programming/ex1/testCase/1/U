FoamFile
{
    version     2.0;
    format      binary;
    arch        "LSB;label=32;scalar=64";
    class       volVectorField;
    location    "1";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (2 0 0);

boundaryField
{
    inlet
    {
        type            prescribedPipeInlet;
        approximationType exponential;
        R               0.02625;
        flowSpeed       2;
        centrepoint     ( 0 0 0 );
        deltaByR        0.1;
        lambda          0;
        value           uniform (2 0 0);
    }
    outlet
    {
        type            pressureInletOutletVelocity;
        value           uniform (2 0 0);
    }
    pipe
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    symmetryVer
    {
        type            symmetryPlane;
    }
    symmetryHor
    {
        type            symmetryPlane;
    }
}


